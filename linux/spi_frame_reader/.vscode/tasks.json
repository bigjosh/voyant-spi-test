// .vscode/tasks.json  (in the workspace root)
{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "make",
        "type": "shell",
        "command": "make",
        "args": [],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": "$gcc"
      } ,

          //---------------------------------------------------
          // 1. copy the file
          //---------------------------------------------------
          {
            "label": "copy-spi_frame_reader",
            "type": "shell",
            "command": "scp",
            "args": [
              // "-q",   // quiet; delete this item if you like progress bars
              "${workspaceFolder}/spi_frame_reader",
              "root@10.0.0.41:/home/root/spi_frame_reader/spi_frame_reader"
            ],
            "options": { "cwd": "${workspaceFolder}" },
            "problemMatcher": []
          },
      
          //---------------------------------------------------
          // 2. chmod the remote file
          //---------------------------------------------------
          {
            "label": "chmod-spi_frame_reader",
            "type": "shell",
            "command": "ssh",
            "args": [
              "root@10.0.0.41",
              "chmod +x ~/spi_frame_reader/spi_frame_reader"
            ],
            "problemMatcher": []
          },
      
          //---------------------------------------------------
          // 3. convenience wrapper that runs 1 then 2
          //---------------------------------------------------
          {
            "label": "deploy-spi_frame_reader",
            "dependsOn": [
              "copy-spi_frame_reader",
              "chmod-spi_frame_reader"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
          }      
      ,      
  ]
  }
  